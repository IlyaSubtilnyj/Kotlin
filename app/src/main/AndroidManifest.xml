<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- internet permissions and network state permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Application"
        tools:targetApi="31">
        <activity
            android:name=".WriteReviewFormActivity"
            android:exported="false"
            android:label="@string/title_activity_write_review_form"
            android:theme="@style/Theme.Application" />
        <activity
            android:name=".FilterActivity"
            android:exported="false"
            android:label="@string/title_activity_filter"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".NavigationCheck"
            android:exported="false"
            android:label="@string/title_activity_navigation_check"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".DetailedActivity"
            android:exported="false"
            android:label="@string/title_activity_detailed"
            android:theme="@style/Theme.Application" />
        <activity
            android:name=".SignInActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat.DayNight" />
        <activity
            android:name=".EnterActivity"
            android:exported="true"
            android:label="@string/title_activity_enter"
            android:theme="@style/Theme.Application">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.AppCompat.DayNight" />
    </application>

</manifest>